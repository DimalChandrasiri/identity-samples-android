<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="org.wso2.oidc.sample.UserInfoActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/splash_title"
        android:textAlignment="center"
        android:textColor="@color/bg_color"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.075" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/brackground"
            android:layout_marginTop="160sp"
            android:gravity="center|top"
            android:paddingStart="30sp"
            android:paddingTop="50sp"
            android:paddingBottom="300sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.075"
            >

            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:textSize="18sp">
            </TextView>

            <TextView
                android:id="@+id/greeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/greeting_one"
                android:layout_alignParentStart="true"
                android:textColor="@color/black"
                android:layout_below="@id/username"
                android:textStyle="bold"
                android:textSize="18sp">
            </TextView>

            <TextView
                android:id="@+id/greeting_soft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/greeting_two"
                android:layout_alignParentStart="true"
                android:textColor="@color/black"
                android:layout_below="@id/greeting"
                android:textStyle="normal"
                android:textSize="12sp">
            </TextView>

            <ImageView
                android:id="@+id/userAvatar"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginTop="5sp"
                android:layout_marginEnd="30sp"
                app:srcCompat="@drawable/user"
                android:layout_alignParentEnd="true"
                android:gravity="end"
                android:contentDescription="avatar" />

            <TextView
                android:id="@+id/userView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:text="@string/user_name"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_below="@id/userAvatar"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userView"
                android:textColor="@color/light_black"
                android:textSize="14sp">
            </TextView>

            <TextView
                android:id="@+id/emailview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="@string/email"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_below="@id/name"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/emailid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/emailview"
                android:textColor="@color/light_black"
                android:textSize="14sp">
            </TextView>

            <TextView
                android:id="@+id/tokentextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:text="@string/accesstoken"
                android:layout_below="@id/emailid"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/accesstoken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_black"
                android:textSize="14sp"
                android:layout_below="@id/tokentextView">
            </TextView>

            <TextView
                android:id="@+id/idtextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/idtoken"
                android:layout_marginTop="15sp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_below="@id/accesstoken"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/idtoken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_black"
                android:layout_below="@id/idtextView"
                android:layout_marginEnd="20sp"
                android:textSize="14sp" />

        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/show_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:background="@drawable/btn_border"
        android:text="@string/showbtn"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.87" />


    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:background="@color/colorPrimary"
        android:text="@string/logoutb"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.97" />

</androidx.constraintlayout.widget.ConstraintLayout>